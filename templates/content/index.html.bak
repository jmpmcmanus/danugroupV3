{% extends "base.html" %}
{% load feed %}
{% block title %}{{ page_title }}{% endblock %}
{% block meta %}
    <meta name="keywords" content="environment, politics, technology, greenhouse gase, climate change, EPA Clean Power Plan" />
    <meta name="description" content="DanuGroup, is a non-profit that examines the interplay between environmental issues, technological solutions, and political policy" />
    <meta name="author" content="Jim McManus" />
{% endblock %}
{% block content %}
  <div class="ui-grid-a ui-responsive">
    <div class="ui-block-a">
      <div class="ui-body ui-body-a" style="border:none;">
        <div class="dg-text">
          <h4>Featured Investigations</h4>
          <div class="featuredwork">
            {% include "content/featuredwork.html" %}
          </div>
          <br />
        </div>
      </div>
    </div>
    <div class="ui-block-b">
      <div class="ui-body ui-body-a" style="border:none;">
        <div class="dg-text">
          <div class="ui-grid-a ui-responsive">
            {% if device_info.width < 800 %}
              <div class="ui-block-a" style="width: 85%">
            {% else %}
              <div class="ui-block-a" style="width: 65%">
            {% endif %}
            <h4>Latest News</h4>
              <h6>
               News on the interplay between environmental problems, 
               technological solutions and political policies.
              </h6>
            </div>
            {% if device_info.width < 800 %}
              <div class="ui-block-b" style="width: 55%">
            {% else %}
              <div class="ui-block-b" style="width: 35%">
            {% endif %}              
            <div id="searchnews">
               {% include "news/tags/search_form.html" %}
              </div>
            </div>
          </div>
          <div id="danunews">
            {% show_latestnews %}
          </div>
          <br />
        </div>
      </div>
    </div>
  </div>
{% endblock %}
